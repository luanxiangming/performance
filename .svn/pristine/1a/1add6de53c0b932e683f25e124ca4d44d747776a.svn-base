package net.unit8.jmeter.protocol.socket_io.sampler;

import java.util.Arrays;
import java.util.HashSet;

import io.socket.SocketIO;
import net.unit8.jmeter.protocol.socket_io.util.SocketIOAsyncActionBase;
import net.unit8.jmeter.protocol.socket_io.util.SocketIOUserInfo;
import net.unit8.jmeter.protocol.socket_io.util.action.*;

import org.apache.jmeter.samplers.SampleResult;

public class TextMessageSampler extends SocketIOSampler {
    private static final long serialVersionUID = 1L;
    
    public TextMessageSampler() {
        super(new HashSet<String>(Arrays.asList(new String[]{
                        "net.unit8.jmeter.protocol.socket_io.control.gui.TextMessageSamplerGui",
                        "org.apache.jmeter.config.gui.SimpleConfigGui"})));
    }

    protected SocketIOAsyncActionBase[] getActions() {
        return new SocketIOAsyncActionBase[] {new CallAction(0),
                                              new CallRejectAction(1),
                                              new CallRejectAction(2)};
    }
}
